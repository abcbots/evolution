# Destroy Current: Complete | One # layouts/mutations/destroy

<% if @mutation %>
  <p>
    <fieldset><legend><b>Destroy</b></legend>
      <%= link_to "Current", 
        :confirm => "Delete current mutation only?", 
	:controller => 'mutations', 
	:action => 'destroy_current_only', 
	:id => @mutation.id %>
      | <%= link_to "Current & Past", @mutation, 
        :confirm => "Delete this mutation and all previous mutations to this mutation?", 
	:method => :delete %>
    </fieldset>
  </p>
<% end %>
    

