
<% _current = _current %>
<% _super = _super %>
<% _word = _word %>


<% _currents = _current.class.find(:all, :conditions => {:super_id => _super.id}, :order => "prioritization ASC" ) %>

<% priority_max = _current.class.maximum(:prioritization, :conditions => {:super_id => _super.id}, :order => "prioritization ASC" ) %>

<% counter = 0 %>

<% if priority_max %>

  <% while counter < priority_max %>

    <% counter = counter + 1 %>

      <fieldset><legend><b><%= _word %>(<%= counter %>)</b></legend>
      <ol>

      <% _currents.each do |one| %>
        <% if one.prioritization == counter %>
	<% if one.mutations %>
	<% for mutation in one.mutations %>
            <p><li>
              <%= render :partial => mutation %>
            </li></p>
	<% end %>
        <% end %>
	<% end %>
      <% end %>

      </ol>
      </fieldset>

  <% end %>

<% end %>





  




