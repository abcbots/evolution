
<% form_for @evolution do |f| %>
  <%= f.error_messages %>
  <p>
    <%= render :partial => 'evolutions/contents/header' %>
  <p>
    <%= render :partial => 'evolutions/contents/detail' %>
  <p>
    <%= f.label :detail %>
    <br /><%= f.text_area :detail, :cols => 60 %>
  <p>
    <%= f.check_box :show_formatting %>
    <%= f.label :show_formatting %>
  <p>
    <%= f.label :header %>
    <br /><%= f.text_field :header %>
  </p>
  <p><%= f.submit "Go" %></p>
<% end %>

