
<% evolution.children.each do |evolution| %>

  <ul>
  
  <% if check_for_childship evolution, @evolution_move || @evolution_clone # if ev is a child of move or clone %>
    <fieldset id="highlight"><% # start highlight %>
  <% else # else, normal %>
    <fieldset><% # stop highlight %>
  <% end # end %>

  <legend>
    <%= render :partial => evolution, :locals => { :evolution => evolution } %>
  </legend>

  <%- unless evolution.children.empty? -%>
  <ul>
    <%= render :partial => 'children', :locals => { :evolution => evolution } %>
  </ul>
  <%- end -%>

  </fieldset>
  </ul>

<% end %>

