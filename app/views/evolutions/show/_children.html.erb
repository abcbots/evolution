<% evolution_move = evolution_move||@evolution_move %>
<% evolution_clone = evolution_move||@evolution_clone %>
<% evolution = evolution||@evolution %>

<% if evolution.children %>

<% evolution.children.each do |child| %>
  <fieldset><legend><%= render :partial => child %></legend>
  <% if check_for_childship child, evolution_move||evolution_clone %><b><% end %>
    <% unless child.children.empty? %>
      <%= render :partial => 'evolutions/show/children', :locals => { :evolution => child } %>
    <% end %>
  <% if check_for_childship child, evolution_move||evolution_clone %></b><% end %>
  </fieldset>
<% end %>

<% end %>
