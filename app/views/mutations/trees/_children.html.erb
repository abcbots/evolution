
<% mutation.children.each do |mutation| %>
<% mutation2 = mutation %>
<% mutation3 = mutation %>
<% mutation4 = mutation %>
<% mutation5 = mutation %>

<fieldset>

  <% if check_for_childship mutation2, @mutation_move||@mutation_clone %>
    <b>
  <% end %>

  <legend>
    <%= render :partial => mutation3 %>
  </legend>

    <ol>
    <% if mutation.children.empty? # if last mutation on tree %> 
      <% mutation4.ancestors.reverse.each do |ancestor| # get ancestors %>  
        <li><%= ancestor.id %>
      <% end %> 
    <% end %>
    </ol>
<hr>
    

    <% unless mutation.children.empty? %>
      <%= render :partial => 'mutations/trees/children', :locals => { :mutation => mutation5 } %>
    <% end %>

  <% if check_for_childship mutation2, @mutation_move||@mutation_clone %>
    </b>
  <% end %>

</fieldset>

<% end %>

